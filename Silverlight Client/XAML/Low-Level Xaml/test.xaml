<UserControl x:Class="SilverPotato.XAML.Low_Level_Xaml.test"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Margin="5,30,5,5" Width="270" Height="130" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0"
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                       VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <TextBlock x:Name="lblBody" FontFamily="Arial" FontSize="12" TextWrapping="Wrap" Width="270">
            Are you sure you want to do this?  Are you sure you want to do this?
            Are you sure you want to do this?Are you sure you want to do this?Are you sure you want to do this?</TextBlock>
        </ScrollViewer>

        <Button x:Name="CancelButton" Content="No" Cursor="Hand"  Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="Yes" Cursor="Hand"  Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
    </Grid>
</UserControl>
