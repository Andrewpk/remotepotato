<UserControl x:Class="SilverPotato.ActivitySpinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot">

        <Canvas x:Name="cnvTopCanvas" Width="40" Height="40">
            <Canvas.RenderTransform>
                <ScaleTransform x:Name="stScaleTransform" CenterX="20" CenterY="20" ScaleX="1" ScaleY="1"></ScaleTransform>
            </Canvas.RenderTransform>
            <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5">
                <Rectangle.Fill>
                    <SolidColorBrush x:Name="scbTintColour" Color="#11000000"></SolidColorBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Canvas Width="20" Height="20" Canvas.Top="10" Canvas.Left="10">
                <Canvas.RenderTransform>
                    <RotateTransform x:Name="rotateTransform" CenterX="10" CenterY="10" />
                </Canvas.RenderTransform>
                <Rectangle x:Name="rctMainRectangle" Width="20" Height="20" Stroke="White" StrokeThickness="1">
                </Rectangle>
                <Ellipse x:Name="elpMainCircle" Width="14" Height="14" Stroke="White" Canvas.Top="3" Canvas.Left="3"></Ellipse>
            </Canvas>
        </Canvas>

    </Grid>
</UserControl>
