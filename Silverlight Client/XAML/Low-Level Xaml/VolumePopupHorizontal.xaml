<UserControl x:Class="SilverPotato.VolumePopupHorizontal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="80" Height="24">


        
        <Border x:Name="brdVolSlider" Grid.Row="1" BorderThickness="1" CornerRadius="5" Width="80" Height="24" >


        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Slider x:Name="sldVolume" Grid.Column="1" Orientation="Horizontal" Margin="0,2,0,2" Width="50"
                    Minimum="0" Maximum="1.0" SmallChange="0.1" LargeChange="0.2"
                    ValueChanged="sldVolume_ValueChanged"
                    ></Slider>

            <Image Grid.Column="0" x:Name="imgCurrentVolume" Source="/Images/btnMainVolLow.png" Width="16" Height="16" 
                   HorizontalAlignment="Center" 
                   Stretch="Uniform" Margin="3,0,0,1"></Image>



        </Grid>
    </Border>

</UserControl>
