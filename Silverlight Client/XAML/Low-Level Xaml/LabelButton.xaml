<UserControl x:Class="SilverPotato.LabelButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             >
    <Grid x:Name="LayoutRoot" Cursor="Hand" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" MouseLeftButtonUp="Label_MouseLeftButtonUp" >
        <Grid.Background>
            <SolidColorBrush Color="#000000" Opacity="0.01" />
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="cdIcon" Width="28" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Image x:Name="imgButton" Grid.Column="0" Source="/Images/btnSideDefault.png" Width="24" Height="24" HorizontalAlignment="Left" Opacity="0.8">
            
        </Image>
        
        <TextBlock x:Name="lblText" Grid.Column="1" FontFamily="Arial" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"
                   Foreground="#DDDDDD" >
            Play Recording
        </TextBlock>
        
        
        </Grid>
</UserControl>
