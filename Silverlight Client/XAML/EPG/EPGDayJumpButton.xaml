<UserControl x:Class="SilverPotato.EPGDayJumpButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Grid x:Name="LayoutRoot">

        <Border x:Name="brdMain" Background="#EEEEEE" Width="28" Height="28" CornerRadius="5" Cursor="Hand"
                MouseEnter="brdAnyJumpLink_MouseEnter" MouseLeave="brdAnyJumpLink_MouseLeave" MouseLeftButtonUp="Border_MouseLeftButtonUp" >
            
            <Grid>
                <TextBlock x:Name="lblDayName" VerticalAlignment="Top" Margin="0,1,0,0" FontFamily="Arial" FontWeight="Bold" FontSize="14" TextAlignment="Center">Mo</TextBlock>
                <TextBlock x:Name="lblDateNumber" VerticalAlignment="Bottom" Margin="0,0,0,1" FontFamily="Arial" FontWeight="Bold" Foreground="#AA0000" FontSize="10" TextAlignment="Center">28</TextBlock>
            </Grid>
            
        </Border>
        
    </Grid>
</UserControl>
