<UserControl x:Class="SilverPotato.TaskIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid x:Name="LayoutRoot">

        <Border x:Name="brdMain" Width="115" Height="25" CornerRadius="4" Background="#DDFFFFFF" Cursor="Hand"
                MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseLeftButtonUp="Border_MouseLeftButtonUp">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2"></DropShadowEffect>
            </Border.Effect>
            
            <Grid>
                <Image x:Name="imgIcon" Source="/Images/logoPotato.png" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBlock x:Name="lblName" HorizontalAlignment="Right" VerticalAlignment="Center"  Width="75"
                    FontFamily="Arial" FontSize="11" Text="Music Player" />
            </Grid>
        </Border>
        
    </Grid>
    
</UserControl>
