<UserControl x:Class="SilverPotato.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0.15"></SolidColorBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="420" />
        </Grid.ColumnDefinitions>

        
        <Grid x:Name="gdTaskBarContainer" Grid.Column="1" VerticalAlignment="Center" />


        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
            <TextBlock x:Name="lblFooterText" Foreground="Gray">Remote Potato &#169;2010 FatAttitude Ltd,  By C Partridge</TextBlock>
            <TextBlock x:Name="btnViewLog" Margin="10,0,0,0" Foreground="AliceBlue" TextDecorations="Underline" Cursor="Hand" MouseLeftButtonUp="btnViewLog_MouseLeftButtonUp">View Log</TextBlock>
        </StackPanel>
        

    </Grid>





</UserControl>
