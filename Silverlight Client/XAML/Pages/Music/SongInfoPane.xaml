<UserControl x:Class="SilverPotato.SongInfoPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    
    <Grid x:Name="LayoutRoot" Width="150" Height="200" VerticalAlignment="Top">

        <StackPanel Orientation="Vertical">
            
                <TextBlock x:Name="lblMediaFullTitle" Foreground="White" FontFamily="Arial" TextWrapping="Wrap" FontSize="14">Audio Track</TextBlock>
            
            
            <TextBlock x:Name="lblMediaType" Foreground="White" FontFamily="Arial" FontSize="14" Margin="0,10,0,0">Audio Track</TextBlock>
            <TextBlock x:Name="lblDuration" Foreground="White" FontFamily="Arial" FontSize="14" Margin="0,5,0,0"></TextBlock>
            <TextBlock x:Name="lblUserRating" Foreground="White" FontFamily="Arial" FontSize="14" Margin="0,5,0,0"></TextBlock>
        </StackPanel>
        
    </Grid>
</UserControl>
