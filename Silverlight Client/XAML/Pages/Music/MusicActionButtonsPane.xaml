<UserControl x:Class="SilverPotato.MusicActionButtonsPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:RP="clr-namespace:SilverPotato">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Vertical">
            <RP:LabelButton x:Name="lbAddToNowPlaying" IconSource="/Images/btnSideAdd.png" DisplayText="Add to Now Playing" />
            <RP:LabelButton x:Name="lbPlayNow" IconSource="/Images/btnSidePlay.png" DisplayText="Play Now" />
            <RP:LabelButton x:Name="lbDownload" IconSource="/Images/btnSideDownload.png" DisplayText="Download" />
        </StackPanel>
        
    </Grid>
</UserControl>
