<UserControl x:Class="SilverPotato.Playlist"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Grid x:Name="LayoutRoot">
        
        <Border Background="#334445" CornerRadius="5" BorderThickness="1" BorderBrush="Silver" >
            <ListBox x:Name="lstPlaylist" Margin="5" BorderThickness="0"
                                 Background="#334445" Padding="0"
                                 FontFamily="Arial" FontSize="10" Foreground="White" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Auto">
            </ListBox>
        </Border> 
       
    </Grid>
</UserControl>
