<UserControl x:Class="SilverPotato.ProgressWaiter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="150" Height="150">
    <Grid x:Name="LayoutRoot">

            <Ellipse Width="150" Height="150" StrokeThickness="20">
            <Ellipse.RenderTransform>
                <RotateTransform x:Name="rtSpinEllipse" CenterX="75" CenterY="75" Angle="0" />
            </Ellipse.RenderTransform>

            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0.5,0">
                    <GradientStop Color="#DDDDFF" Offset="0" />
                    <GradientStop Color="#DDDDFF" Offset="0.2" />
                    <GradientStop Color="#6666AA" Offset="0.4" />
                    <GradientStop Color="#DDDDFF" Offset="0.6" />
                    <GradientStop Color="#DDDDFF" Offset="1" />
                </LinearGradientBrush>

            </Ellipse.Stroke>
        </Ellipse>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" >
        <TextBlock x:Name="lblLine1" Foreground="White" TextAlignment="Center">
            Buffering
        </TextBlock>
            <TextBlock x:Name="lblLine2" Foreground="White" TextAlignment="Center">
            0%
            </TextBlock>
        </StackPanel>
        
    </Grid>
</UserControl>
