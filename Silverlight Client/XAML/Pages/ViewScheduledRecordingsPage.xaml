    <UserControl x:Class="SilverPotato.ScheduledRecordingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    
        <UserControl.Resources>
        <ResourceDictionary Source="/SilverPotato;component/resources.xaml" />
    </UserControl.Resources>

    <Border BorderThickness="2" CornerRadius="8" Background="{StaticResource BlueShine}" Width="600" Height="500">
        <Border.BorderBrush>
            <RadialGradientBrush GradientOrigin="1,0" RadiusX="1" RadiusY="1">
                <GradientStop Color="#FFFFFF" Offset="0" />
                <GradientStop Color="#777777" Offset="1" />
            </RadialGradientBrush>
        </Border.BorderBrush>

        <Grid x:Name="LayoutRoot" Margin="20" >
            <TextBlock x:Name="lblPageTitle" FontFamily="Tahoma" FontSize="32" Foreground="White">Scheduled Recordings</TextBlock>
            <Grid x:Name="gdContent" />
            <TextBlock x:Name="lblNoContent" FontFamily="Tahoma" FontSize="20" Foreground="Silver" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">No recordings.</TextBlock>
        </Grid>

    </Border>
</UserControl>
