<UserControl x:Class="SilverPotato.TextViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >


    <UserControl.Resources>
        <ResourceDictionary Source="/SilverPotato;component/resources.xaml" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Width="620" Height="620" >


        <Border BorderThickness="1" CornerRadius="8" Background="{StaticResource BlueShine}" Width="Auto" Height="Auto">
            <Border.BorderBrush>
                <RadialGradientBrush GradientOrigin="1,0" RadiusX="1" RadiusY="1">
                    <GradientStop Color="#FFFFFF" Offset="0" />
                    <GradientStop Color="#777777" Offset="1" />
                </RadialGradientBrush>
            </Border.BorderBrush>

            <Border BorderBrush="White" BorderThickness="2" CornerRadius="5">
                <ScrollViewer Width="600" Height="600">
                    <TextBlock x:Name="txtSpool" FontFamily="Courier New" Foreground="White" FontSize="10" TextWrapping="Wrap">

                    </TextBlock>
                </ScrollViewer>
            </Border>

        </Border>

    </Grid>
</UserControl>
