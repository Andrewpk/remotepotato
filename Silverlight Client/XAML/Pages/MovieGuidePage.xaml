    <UserControl x:Class="SilverPotato.MovieGuidePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <UserControl.Resources>
        <ResourceDictionary Source="/SilverPotato;component/resources.xaml" />
    </UserControl.Resources>

    <Border BorderThickness="2" CornerRadius="8" Background="{StaticResource BlueShine}" Width="730" Height="600">
        <Border.BorderBrush>
            <RadialGradientBrush GradientOrigin="1,0" RadiusX="1" RadiusY="1">
                <GradientStop Color="#FFFFFF" Offset="0" />
                <GradientStop Color="#777777" Offset="1" />
            </RadialGradientBrush>
        </Border.BorderBrush>



        <Grid x:Name="LayoutRoot" Margin="20" >
            <TextBlock x:Name="lblPageTitle" FontFamily="Tahoma" FontSize="32" Foreground="White">Movie Guide</TextBlock>
            <ComboBox x:Name="cmbFilter" Height="24" Width="120" FontFamily="Arial" SelectedIndex="0"
                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,90,0"
                      SelectionChanged="cmbFilter_SelectionChanged">
                <ComboBoxItem Content="Top-Rated Only" />
                <ComboBoxItem Content="All Movies" />
            </ComboBox>
            <Grid x:Name="gdContent" />
        </Grid>

    </Border>
</UserControl>
