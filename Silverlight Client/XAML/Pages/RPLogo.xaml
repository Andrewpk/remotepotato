<UserControl x:Class="SilverPotato.RPLogo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Grid x:Name="LayoutRoot" Width="250" Height="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="1" />
            <RowDefinition Height="40" />

        </Grid.RowDefinitions>
        
            <Image x:Name="imgMainLogo" Grid.Row="0" Height="200" Width="200" Source="/Images/MainLogo.png" Opacity="1" VerticalAlignment="Bottom" ></Image>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock FontSize="28" Foreground="White" FontWeight="Bold">Remote</TextBlock>
            <TextBlock FontSize="28" Foreground="White">Potato</TextBlock>
            <TextBlock FontSize="12" Foreground="White">®</TextBlock>
        </StackPanel>

    </Grid>
</UserControl>
